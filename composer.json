{
    "name": "sarhan/oauth2-docusign",
    "description": "Docusign OAuth2 provider for League OAuth2 Client",
    "keywords": ["docusign", "oauth", "oauth2"],
    "require": {
        "php": "^7.1|^8.0",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0|^9.0",
        "squizlabs/php_codesniffer": "^2.3|^3.0"
    },
    "homepage": "https://github.com/AlaaSarhan/oauth2-docusign",
    "license": "MIT",
    "authors": [
        {
            "name": "Alaa Sarhan",
            "email": "sarhan.alaa@protonmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sarhan\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarhan\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs -sp"
    }
}
